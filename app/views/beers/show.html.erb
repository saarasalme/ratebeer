<p style="color: green"><%= notice %></p>

<%= render @beer %>

<div>
  <% if current_user %>
    <%= link_to "Edit this beer", edit_beer_path(@beer) %> |
  <% end %>
  <%= link_to "Back to beers", beers_path %>

  <%= button_to("Destroy this beer", @beer, method: :delete , form: { data: { turbo_confirm: 'Are you sure?'} }) if current_user %>
</div>
